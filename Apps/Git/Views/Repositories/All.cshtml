<div class="container">
    <div class="section">
        <div class="row">
            <div class="col-md-8 offset-md-2">
                <div class="page-header text-center">
                    <h2 id="tables">Public</h2>
                    <p>Repositories</p>
                </div>

                <div class="d-flex justify-content-center">
                    <a class="btn btn-block btn-primary text-white mb-3" href="/Repositories/Create">Create a repository</a>
                </div>

                <div class="component">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th scope="col">Name</th>
                                <th scope="col">Owner</th>
                                <th scope="col">Created On</th>
                                <th scope="col">Commits Count</th>
                                <th scope="col">Commit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var model in Model)
                            {
                                <tr class="table-light">
                                    <th scope="row">@model.Name</th>
                                    <td>@model.Owner</td>
                                    <td>@model.CreatedOn</td>
                                    <td>@model.ComitsCount</td>
                                    <td>
                                        <a class="btn btn-block btn-primary text-white mb-3" href="/Commits/Create?id=@model.Id">Commit</a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>